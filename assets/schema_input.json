{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/samplesheet.schema.json",
  "title": "Samplesheet Schema",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["entityid", "file_name"],
    "additionalProperties": true,
    "properties": {
      "entityid": {
        "type": "string",
        "pattern": "^syn\\d+$",
        "description": "Synapse entity ID (e.g., syn123456)"
      },
      "entity_id": {
        "type": "string",
        "pattern": "^syn\\d+$",
        "description": "Alternate header some sheets use"
      },
      "file_name": { "type": "string", "minLength": 1 },
      "file_type": { "type": "string" },
      "file_description": { "type": "string" },
      "file_size": {
        "oneOf": [
          { "type": "integer", "minimum": 0 },
          { "type": "string", "pattern": "^[0-9]+$" }
        ]
      },
      "md5sum": { "type": "string", "pattern": "^[A-Fa-f0-9]{32}$" },
      "experimental_strategy_and_data_subtypes": { "type": "string" },
      "submission_version": { "type": "string" },
      "checksum_value": { "type": "string" },
      "checksum_algorithm": {
        "type": "string",
        "enum": ["md5", "sha1", "sha256", "sha512", "none"],
        "default": "md5"
      },
      "file_mapping_level": { "type": "string" },
      "release_datetime": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}([Tt ]\\d{2}:\\d{2}(:\\d{2})?(Z|[+-]\\d{2}:?\\d{2})?)?$"
      },
      "is_supplementary_file": {
        "oneOf": [
          { "type": "boolean" },
          { "type": "string", "enum": ["true","false","TRUE","FALSE","yes","no","YES","NO","0","1"] }
        ]
      },
      "study.phs_accession": { "type": "string", "pattern": "^phs\\d{6,}$" },
      "sample.sample_id": { "type": "string" },
      "participant.study_participant_id": { "type": "string" }
    }
  }
}
