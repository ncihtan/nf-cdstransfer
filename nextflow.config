profiles {
    local {
        process.executor  = 'local'
    }

    docker {
        docker.enabled    = true
    }

    tower {
        docker.enabled    = true
        process {
            cpus          = { 1 * task.attempt }
            memory        = { 1.GB * task.attempt }
            maxRetries    = 3
            errorStrategy = 'retry'
         }
    }
}

docker.enabled = true

