{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/nextflow_schema.json",
  "title": "CRDC Uploader Pipeline Schema",
  "description": "Parameters for the Nextflow pipeline.",

  "type": "object",
  "properties": {
    "input": {
      "type": "string",
      "description": "Path or URL to the samplesheet CSV file. If omitted, defaults to samplesheet.csv in the repo root (resolved in main.nf)."
    },
    "dry_run": {
      "type": "boolean",
      "description": "Generate configs/metadata but skip the actual CRDC upload.",
      "default": false
    },
    "overwrite": {
      "type": "boolean",
      "description": "Allow overwriting files on upload.",
      "default": true
    }
  },
  "additionalProperties": false
}
