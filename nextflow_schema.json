{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/nextflow_schema.json",
  "title": "CRDC Uploader Pipeline Schema",
  "type": "object",
  "properties": {
    "input": {
      "type": "string",
      "description": "Path or URL to the samplesheet CSV. If omitted, main.nf defaults to ${projectDir}/samplesheet.csv."
    },
    "dry_run": {
      "type": "boolean",
      "description": "Generate configs/metadata but skip the actual CRDC upload.",
      "default": false
    },
    "overwrite": {
      "type": "boolean",
      "description": "Allow overwriting files on upload.",
      "default": true
    }
  },
  "additionalProperties": true
}
