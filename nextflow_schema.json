{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/nextflow_schema.json",
  "title": "CRDC Uploader Pipeline Schema",
  "description": "Parameters for the Nextflow pipeline.",
  "type": "object",
  "properties": {
    "input": {
      "type": "string",
      "description": "Path/URL to samplesheet CSV (defaults to repo copy in main.nf).",
      "default": "samplesheet.csv"
    },
    "dry_run": {
      "type": "boolean",
      "description": "Generate configs/metadata but skip actual CRDC upload.",
      "default": false
    },
    "overwrite": {
      "type": "boolean",
      "description": "Allow overwriting files on upload.",
      "default": true
    }
  },
  "additionalProperties": true
}
