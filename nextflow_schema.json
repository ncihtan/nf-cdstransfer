{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/nextflow_schema.json",
  "title": "CRDC Uploader Pipeline Schema",
  "type": "object",
  "properties": {
    "input": {
      "type": "string",
      "description": "Path to the samplesheet CSV (relative to projectDir by default).",
      "default": "samplesheet.csv"
    },
    "dry_run": {
      "type": "boolean",
      "description": "Generate configs/metadata but skip the actual upload.",
      "default": false
    },
    "overwrite": {
      "type": "boolean",
      "description": "Allow overwriting files on upload.",
      "default": true
    }
  },
  "required": [],
  "additionalProperties": true
}
